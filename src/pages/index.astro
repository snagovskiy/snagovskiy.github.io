---
import MainLayout from '../layouts/MainLayout.astro';
import Gallery from '../components/Gallery.astro';
import { client } from '../lib/prismic';
import { asText, asHTML } from '@prismicio/helpers';

// 1. Получаем данные главной страницы (как и раньше)
const homepage = await client.getSingle('homepage', {
  fetchLinks: [
    'gallery_image.image',
    'gallery_image.title',
    'gallery_image.description'
  ]
});

// 2. Получаем данные навигации (меню) из Prismic
const navigation = await client.getSingle('navigation');

// 3. Извлекаем заголовок и описание главной страницы
const homeTitle = asText(homepage.data.home_title) || 'Уличная фотография, которая рассказывает истории';
const homeDescriptionHTML = asHTML(homepage.data.home_description) || '<p>Запечатлеваю моменты городской жизни...</p>';

// 4. Избранные работы
const featuredImages = homepage.data.selected_works?.map(item => {
  const linkedImage = item.image;
  if (!linkedImage?.data) return null;
  return {
    src: linkedImage.data.image.url,
    alt: linkedImage.data.image.alt || asText(linkedImage.data.title) || '',
    title: asText(linkedImage.data.title) || '',
    description: asText(linkedImage.data.description) || ''
  };
}).filter(Boolean) || [];
---

<!-- Передаём navigation в MainLayout -->
<MainLayout 
  navigation={navigation}
  title="StreetFrame - Галерея уличной фотографии"
  description="Профессиональная уличная фотография. Пейзажи городской среды, архитектура и моменты жизни города."
>
  <section class="hero fade-in">
    <div class="hero-content">
      <h1 class="hero-title">{homeTitle}</h1>
      <!-- Описание выводим как HTML (с параграфами и прочим) -->
      <div class="hero-description" set:html={homeDescriptionHTML} />
      <div class="hero-actions">
        <a href="/landscapes" class="btn btn-primary">Смотреть пейзажи</a>
        <a href="/about" class="btn btn-secondary">Об авторе</a>
      </div>
    </div>
  </section>

  <section class="featured-section">
    <h2 class="section-title">Избранные работы</h2>
    {featuredImages.length > 0 ? (
      <Gallery images={featuredImages} />
    ) : (
      <p class="no-images">Нет избранных работ</p>
    )}
    
    <div class="cta-section">
      <h2 class="cta-title">Хотите увидеть больше?</h2>
      <p class="cta-description">
        В галерее пейзажей собраны лучшие работы, запечатлевшие атмосферу городских улиц в разное время суток и года.
      </p>
      <a href="/landscapes" class="btn btn-primary btn-large">Перейти в галерею пейзажей</a>
    </div>
  </section>
</MainLayout>

<style>
  /* Стили полностью сохранены, без изменений */
