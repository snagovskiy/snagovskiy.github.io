---
import MainLayout from '../layouts/MainLayout.astro';
import Gallery from '../components/Gallery.astro';

// Пример данных для галереи на главной
const featuredImages = [
  {
    src: "/images/landscape/IMG_20251016_170412.jpg",
    alt: "Родина-мать Волгоград",
    title: "Родина-мать",
    description: "Скульптура «Родина-мать зовёт!»"
  },
  {
    src: "/images/landscape/IMG_20251016_123325.jpg",
    alt: "Парк Победы. Волгоград",
    title: "Парк Победы",
    description: "Женщины труженици тыла"
  },
  {
    src: "/images/landscape/IMG_20251016_170515.jpg",
    alt: "Храм Всех Святых. Волгоград",
    title: "Храм Всех Святых",
    description: "Храм Всех Святых на закате"
  }
];
---

<MainLayout 
  title="StreetFrame - Галерея уличной фотографии"
  description="Профессиональная уличная фотография. Пейзажи городской среды, архитектура и моменты жизни города."
>
  <section class="hero fade-in">
    <div class="hero-content">
      <h1 class="hero-title">Уличная фотография, которая рассказывает истории</h1>
      <p class="hero-description">
        Запечатлеваю моменты городской жизни, архитектурные формы и неповторимую атмосферу улиц. 
        Каждый кадр — это история, ожидающая своего зрителя.
      </p>
      <div class="hero-actions">
        <a href="/landscapes" class="btn btn-primary">Смотреть пейзажи</a>
        <a href="/about" class="btn btn-secondary">Об авторе</a>
      </div>
    </div>
  </section>

  <section class="featured-section">
    <h2 class="section-title">Избранные работы</h2>
    <Gallery images={featuredImages} />
    
    <div class="cta-section">
      <h2 class="cta-title">Хотите увидеть больше?</h2>
      <p class="cta-description">
        В галерее пейзажей собраны лучшие работы, запечатлевшие атмосферу городских улиц в разное время суток и года.
      </p>
      <a href="/landscapes" class="btn btn-primary btn-large">Перейти в галерею пейзажей</a>
    </div>
  </section>
</MainLayout>

<style>
  .hero {
    padding: 3rem 0;
    text-align: center;
  }
  
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }
  
  .hero-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all var(--transition-speed);
    border: 2px solid transparent;
  }
  
  .btn-primary {
    background-color: var(--accent-color);
    color: white;
  }
  
  .btn-primary:hover {
    background-color: var(--accent-hover);
    transform: translateY(-2px);
  }
  
  .btn-secondary {
    background-color: transparent;
    color: var(--accent-color);
    border-color: var(--accent-color);
  }
  
  .btn-secondary:hover {
    background-color: var(--accent-color);
    color: white;
    transform: translateY(-2px);
  }
  
  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }
  
  .featured-section {
    margin-top: 4rem;
  }
  
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--text-primary);
    text-align: center;
  }
  
  .cta-section {
    background-color: var(--bg-secondary);
    border-radius: var(--border-radius);
    padding: 3rem 2rem;
    text-align: center;
    margin-top: 4rem;
    box-shadow: var(--card-shadow);
  }
  
  .cta-title {
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  
  .cta-description {
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .btn {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }
  }
</style>