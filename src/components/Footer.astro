---
export interface Props {
  navigation?: any;
}

const { navigation } = Astro.props;

const defaultMenuItems = [
  { label: 'Главная', link: { url: '/' } },
  { label: 'Пейзажи', link: { url: '/landscapes' } },
  { label: 'Об авторе', link: { url: '/about' } }
];

const menuItems = navigation?.data?.menu_items || defaultMenuItems;
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-info">
        <p class="footer-text">© {new Date().getFullYear()} StreetFrame. Все права защищены.</p>
        <p class="footer-text">Уличная фотография, пейзажи и моменты городской жизни.</p>
      </div>
      <div class="footer-links">
        {menuItems.map((item, index) => (
          <a 
            href={item.link?.url || '#'} 
            class="footer-link" 
            key={index}
          >
            {item.label}
          </a>
        ))}
        <!-- <span class="footer-link disabled">Портреты (скоро)</span> -->
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--bg-secondary);
    padding: 3rem 0 2rem;
    margin-top: 4rem;
    border-top: 1px solid var(--border-color);
    transition: background-color var(--transition-speed), border-color var(--transition-speed);
  }
  
  .footer-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }
  
  .footer-text {
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }
  
  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }
  
  .footer-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color var(--transition-speed);
  }
  
  .footer-link:hover:not(.disabled) {
    color: var(--accent-color);
  }
  
  .footer-link.disabled {
    opacity: 0.5;
    cursor: default;
    pointer-events: none;
  }
  
  @media (min-width: 768px) {
    .footer-content {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }
</style>